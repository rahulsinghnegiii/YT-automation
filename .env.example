# =============================================================================
# AI MUSIC UPLOADER - ENVIRONMENT CONFIGURATION
# Complete Multi-Channel YouTube Automation Platform
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# ADMIN CREDENTIALS
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=music_uploader
DB_USER=postgres
DB_PASSWORD=password
DB_STORAGE=data/music_uploader.db

# =============================================================================
# MULTI-CHANNEL YOUTUBE CONFIGURATION
# =============================================================================
# Primary Channel
YOUTUBE_CLIENT_ID_1=your_client_id_1
YOUTUBE_CLIENT_SECRET_1=your_client_secret_1
YOUTUBE_REDIRECT_URI_1=http://localhost:3000/auth/youtube/callback

# Channel 2
YOUTUBE_CLIENT_ID_2=your_client_id_2
YOUTUBE_CLIENT_SECRET_2=your_client_secret_2
YOUTUBE_REDIRECT_URI_2=http://localhost:3000/auth/youtube/callback

# Channel 3
YOUTUBE_CLIENT_ID_3=your_client_id_3
YOUTUBE_CLIENT_SECRET_3=your_client_secret_3
YOUTUBE_REDIRECT_URI_3=http://localhost:3000/auth/youtube/callback

# Add more channels as needed (supports up to 10 channels)
# YOUTUBE_CLIENT_ID_4=your_client_id_4
# YOUTUBE_CLIENT_SECRET_4=your_client_secret_4
# YOUTUBE_REDIRECT_URI_4=http://localhost:3000/auth/youtube/callback

# =============================================================================
# SEO OPTIMIZATION APIs
# =============================================================================
# Keyword Research APIs
SERPAPI_KEY=your_serpapi_key_here
UBERSUGGEST_API_KEY=your_ubersuggest_api_key_here
KEYWORDS_EVERYWHERE_API_KEY=your_keywords_everywhere_api_key_here

# Google Trends API
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# =============================================================================
# PROMOTION BOTS CONFIGURATION
# =============================================================================

# Reddit Bot Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=YouTubePromoBot/1.0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNELS=["@channel1", "@channel2", "@channel3"]

# Twitter/X Bot Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Discord Bot Configuration (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNELS=["channel_id_1", "channel_id_2"]

# =============================================================================
# PLAYLIST AUTOMATION
# =============================================================================
# Auto-playlist creation settings
AUTO_PLAYLIST_ENABLED=true
PLAYLIST_MAX_VIDEOS=200
PLAYLIST_CATEGORIES=music,gaming,tech,lifestyle,educational

# =============================================================================
# ENGAGEMENT BOT CONFIGURATION
# =============================================================================
# Engagement automation settings
ENGAGEMENT_BOT_ENABLED=true
ENGAGEMENT_RATE_LIMIT=0.1
ENGAGEMENT_DAILY_LIMIT=50

# Comment templates (comma-separated)
COMMENT_TEMPLATES="Great content!,Love this!,Amazing work!,Keep it up!,Fantastic!"

# =============================================================================
# SHORTS GENERATION
# =============================================================================
# FFmpeg path (leave empty for auto-detection)
FFMPEG_PATH=

# Shorts generation settings
SHORTS_ENABLED=true
SHORTS_MAX_PER_VIDEO=3
SHORTS_AUTO_GENERATE=true
SHORTS_QUALITY=high

# =============================================================================
# AI & MACHINE LEARNING SERVICES
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# Alternative AI Services
CLAUDE_API_KEY=your_claude_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SCHEDULING & AUTOMATION
# =============================================================================
# Cron job intervals (in hours)
HARVEST_INTERVAL_HOURS=6
PROCESSING_INTERVAL_HOURS=2
UPLOAD_INTERVAL_HOURS=8
SEO_REFRESH_INTERVAL_HOURS=24
PROMOTION_INTERVAL_HOURS=12
ENGAGEMENT_INTERVAL_HOURS=4

# Timezone
TZ=UTC

# =============================================================================
# QUOTA & RATE LIMITING
# =============================================================================
# YouTube API quota settings per channel
YOUTUBE_DAILY_QUOTA_LIMIT=10000
YOUTUBE_QUOTA_SAFETY_THRESHOLD=0.8

# Rate limiting settings
REDDIT_RATE_LIMIT=60
TELEGRAM_RATE_LIMIT=30
TWITTER_RATE_LIMIT=300

# =============================================================================
# FILE STORAGE & PROCESSING
# =============================================================================
# Storage paths
DOWNLOADS_PATH=downloads
PROCESSED_PATH=processed
UPLOADS_PATH=uploads
SHORTS_PATH=shorts
THUMBNAILS_PATH=thumbnails

# File cleanup settings (in days)
CLEANUP_TEMP_FILES_DAYS=7
CLEANUP_OLD_SHORTS_DAYS=30
CLEANUP_OLD_LOGS_DAYS=90

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Analytics services
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Health monitoring
HEALTH_CHECK_INTERVAL=300
SYSTEM_ALERTS_ENABLED=true
EMAIL_ALERTS_ENABLED=false

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# Session security
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12

# API Security
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600000

# =============================================================================
# FEATURE TOGGLES
# =============================================================================
# Enable/disable major features
MULTI_CHANNEL_ENABLED=true
SEO_OPTIMIZATION_ENABLED=true
PROMOTION_BOTS_ENABLED=true
SHORTS_GENERATION_ENABLED=true
ENGAGEMENT_BOT_ENABLED=true
PLAYLIST_AUTOMATION_ENABLED=true
A_B_TESTING_ENABLED=true

# Advanced features
AI_CONTENT_ANALYSIS_ENABLED=true
COMPETITOR_MONITORING_ENABLED=true
TRENDING_ANALYSIS_ENABLED=true
AUTO_OPTIMIZATION_ENABLED=true

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
# Log levels: error, warn, info, debug, verbose
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Debug modes
DEBUG_YOUTUBE_API=false
DEBUG_PROMOTION_BOTS=false
DEBUG_SEO_OPTIMIZER=false
DEBUG_SHORTS_GENERATOR=false

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Concurrent processing limits
MAX_CONCURRENT_UPLOADS=3
MAX_CONCURRENT_PROCESSING=5
MAX_CONCURRENT_DOWNLOADS=10

# Memory limits
MAX_MEMORY_USAGE=80
MAX_CPU_USAGE=90

# Cache settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# WEBHOOKS & INTEGRATIONS
# =============================================================================
# Webhook URLs for external notifications
WEBHOOK_UPLOAD_SUCCESS=https://your-webhook-url.com/upload/success
WEBHOOK_UPLOAD_FAILED=https://your-webhook-url.com/upload/failed
WEBHOOK_PROMOTION_COMPLETE=https://your-webhook-url.com/promotion/complete

# Slack integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-slack-webhook
SLACK_CHANNEL=#youtube-automation

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development settings
DEV_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTHENTICATION=false

# Testing
TEST_CHANNEL_ID=your_test_youtube_channel_id
TEST_VIDEO_PATH=test-files/sample-video.mp4
TEST_MODE=false

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# Cloud storage backup
CLOUD_BACKUP_ENABLED=false
AWS_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom processing workflows
CUSTOM_WORKFLOW_ENABLED=false
WORKFLOW_CONFIG_PATH=config/workflows.json

# Machine learning models
ML_MODEL_PATH=models/
USE_GPU_ACCELERATION=false
ML_BATCH_SIZE=32

# Content filtering
CONTENT_FILTER_ENABLED=true
NSFW_DETECTION_ENABLED=true
COPYRIGHT_CHECK_ENABLED=true

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
